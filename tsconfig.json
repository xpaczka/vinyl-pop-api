{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types/"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
